<div id="login-modal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <ul class="nav nav-tabs" role="tablist">
                    <li class="active"><a href="#signin-tab" aria-controls="home" role="tab" data-toggle="tab">Login</a></li>
                    <li><a href="#register-tab" aria-controls="profile" role="tab" data-toggle="tab">Register</a></li>
                    <li class="pull-right"><button type="button" class="close pull-right" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button></li>
                </ul>
                <div class="tab-content">
                    <div role="tabpanel" class="tab-pane active" id="signin-tab">
                        @{ await Html.RenderPartialAsync("LoginModal/_Login", new LoginViewModel()); }
                    </div>
                    <div role="tabpanel" class="tab-pane" id="register-tab">
                        @{ await Html.RenderPartialAsync("LoginModal/_Register", new RegisterViewModel()); }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>