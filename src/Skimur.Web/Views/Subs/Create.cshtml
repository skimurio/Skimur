@model CreateEditSubModel
@{
    ViewBag.Title = "Create a new sub";
}

<h2 class="page-header">@ViewBag.Title</h2>
<form asp-controller="Subs" asp-action="Create" method="post" class="form-horizontal" role="form">
    @{ await Html.RenderPartialAsync("_SubCreateEdit", Model); }
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Create" />
        </div>
    </div>
</form>
 